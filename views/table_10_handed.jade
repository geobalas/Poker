#table_wrap
	#modal_wrap(ng-show="show_buy_in_modal")
		#modal
			form
				h1 {{table.name}}
				p Max buy in {{table.max_buy_in}}
				p Min buy in {{table.min_buy_in}}
				p You have a total of {{$root.total_chips}} chips
				p.error(ng-show="buy_in_error") {{buy_in_error}}
				input.input_left(type="number", ng-model="buy_in_amount", ng-trim="true")
				input(type="submit", ng-click="sit_on_the_table(seat)", value="Sit in")
		#curtain(ng-show="show_buy_in_modal" ng-click="show_buy_in_modal=false;")
	.row
		.cell
			a#to_lobby.button(href="/") < Lobby
			.player_wrap.top.left(ng-show="!$root.sitting_on_table || table.seats[0].name", ng-class="{active: table.active_seat==0}")
				.sit_in(ng-show="!table.seats[0].name", ng-click="show_buy_in_modal=true; seat=0;") Sit In
				.player_content(ng-show="table.seats[0].name")
					p {{table.seats[0].name}}
					p(ng-show="table.seats[0].sits_in"){{table.seats[0].chips}}
					p(ng-show="!table.seats[0].sits_in") Sitting Out
			#dealer_wrap_0.dealer_wrap
				.dealer_button(ng-show="table.dealer_seat==0") D
